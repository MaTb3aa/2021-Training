//==================================================================//
const int N = 200005, M = 2000 + 5, mod = 1e9 + 7;


/// MST_Kruskal
priority_queue<int>mx;
struct unionFind{
    vector < int > rankk , parent,size ;
    int forests ,network=0;
    unionFind(ll n){
    	size = rankk = vector < int > (n) , parent = vector < int > (n);
        forests = n ;
        for(int i = 0 ; i < n ;i++){
            parent[i]=i;
            size[i]=rankk[i]=1;
        }
    }
    int findSet(ll x){
        if(x==parent[x])return x ;
        return parent[x] = findSet(parent[x]);
    }
    void link(int x , int y){
        if(rankk[x]>rankk[y])swap(x,y);
        parent[x]=y;
        size[y]+=size[x];
        mx.push(size[y]);
        if(rankk[x]==rankk[y])rankk[y]++;
    }
    bool unionSets(int x , int y){
        if(findSet(x)!=findSet(y)){
            link(findSet(x),findSet(y));
            forests--;
        }
        return x!=y;
    }
    bool sameSet(int x , int y){
        return findSet(x)==findSet(y);
    }
    vector < vector < int > > connectedComponent(){
        vector < vector < int > > comps(sz(parent));
        for(int i = 0 ; i < sz(parent);i++){
            comps[findSet(i)].push_back(i);
        }
    }
};
void test_case(){
		mx = priority_queue<int>();
		int n;
		cin>>n;
		map<string,int>mp;
		int id=1;
		unionFind dsu(100002);
		while(n--){
			string a,b;
			cin>>a>>b;
			if(!mp.count(a))mp[a]=id++;
			if(!mp.count(b))mp[b]=id++;
			dsu.unionSets(mp[a], mp[b]);
			cout<<dsu.size[dsu.findSet(mp[a])]<<endl;

		}



}
int main() {
	run();
	int t=1;
	cin>>t;
	while(t--){
		test_case();

	}


}
